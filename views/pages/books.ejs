<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Books | BookMuse</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  
  <main class="books-page">
    <!-- Placeholder for top filter + add book -->
    <section class="books-controls">
      <div class="filter-buttons">
        <form action="/books" method="GET"><button type="submit">All</button></form>
        <form action="/books?status=To Read" method="GET"><button type="submit">To Read</button></form>
        <form action="/books?status=Reading" method="GET"><button type="submit">Reading</button></form>
        <form action="/books?status=Completed" method="GET"><button type="submit">Completed</button></form>
      </div>

      <div class="add-book-button">
        <a href="/books/add" class="add-book-link">+ Add Book</a>
      </div>
    </section>

    <% if (books.length === 0) { %>
  <p class="no-books">No books found.</p>
<% } else { %>
  <ul class="book-list">
  <% books.forEach(book => { %>
    <li class="book-card">
      <!-- Top: Favorite + 3-dot Menu -->
      <div class="book-top-menu">
        <form action="/books/<%= book.id %>/favorite" method="POST" class="fav-form">
          <button type="submit" class="fav-btn">
            <%= book.is_favorite ? "‚ù§Ô∏è" : "ü§ç" %>
          </button>
        </form>

        <!-- Three-dot dropdown -->
        <div class="dropdown">
          <button class="three-dot-btn">‚ãÆ</button>
          <div class="dropdown-menu">
            <a href="/books/edit/<%= book.id %>">‚úèÔ∏è Edit</a>
            <form action="/books/delete/<%= book.id %>" method="POST">
              <button type="submit" class="delete-btn">üóë Delete</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Cover Image -->
      <% if (book.cover_url) { %>
        <img src="<%= book.cover_url %>" alt="Book Cover" class="book-cover" />
      <% } %>

      <!-- Book Info -->
      <h2 class="book-card-title"><%= book.title %></h2>
      <p class="author">by <%= book.author %></p>

      <!-- Rating (stars) -->
      <div class="star-rating">
        <% for (let i = 1; i <= 5; i++) { %>
          <span class="<%= i <= book.rating ? 'star filled' : 'star' %>">‚òÖ</span>
        <% } %>
      </div>

      <!-- Status Tag -->
      <div class="status-tag"><%= book.status %></div>

      <!-- Optional Tag (future: genre/channel/etc) -->
      <% if (book.tags && book.tags.length > 0) { %>
        <div class="book-tags">
          <% book.tags.forEach(tag => { %>
            <span class="tag"><%= tag %></span>
          <% }) %>
        </div>
      <% } %>

      <!-- Read Date -->
      <% if (book.read_date) { %>
        <p class="read-date">Read on: <%= new Date(book.read_date).toLocaleDateString() %></p>
      <% } %>

      <!-- Notes Link -->
      <a href="/books/<%= book.id %>/notes" class="notes-link">üìù Notes</a>
    </li>
  <% }); %>
</ul>

<!-- üß≠ Pagination -->
<div class="pagination">
  <% for (let i = 1; i <= totalPages; i++) { %>
    <a href="/books?page=<%= i %><%= (typeof status !== 'undefined') ? `&status=${status}` : '' %>" class="<%= i === currentPage ? 'active' : '' %>">
      <%= i %>
    </a>
  <% } %>
</div>

<% } %>

  </main>
</body>
</html>
