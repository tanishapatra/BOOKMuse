
<section class="quote-page">
  <div class="quote-container">
    
    <!-- NEW: Edit icon wrapper -->
    <div class="quote-header">
      <button type="button" class="edit-icon" onclick="toggleEdit()">✏️</button>
    </div>

    <form action="/quotes/edit" method="POST" id="quoteForm">
      <blockquote id="quoteDisplay"><%= quote.content %></blockquote>

      <textarea id="quoteEdit" name="content" class="quote-textarea" style="display: none;"><%= quote.content %></textarea>

      <button type="submit" id="saveBtn" style="display: none;"> Save</button>
    </form>
  </div>
</section>



<script>
  function toggleEdit() {
    document.getElementById("quoteDisplay").style.display = "none";
    document.getElementById("quoteEdit").style.display = "block";
    document.getElementById("saveBtn").style.display = "inline-block";
  }
</script>
