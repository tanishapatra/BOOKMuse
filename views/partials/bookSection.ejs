<section class="book-section"> 
  <h2 class="books-header">Your Books</h2>

  <% if (books.length > 0) { %>
    <ul class="book-list">
      <% books.forEach(book => { %>
        <%- include("bookCard", { book, redirectTo }) %>
      <% }) %>
    </ul>

    <!-- ðŸ§­ Pagination (ONLY if totalPages and currentPage exist) -->
    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="/?page=<%= i %>#books" class="<%= i === currentPage ? 'active' : '' %>">
          <%= i %>
        </a>
      <% } %>
    </div>
  <% } else { %>
    <p class="no-books">No books yet! Start your library today ðŸ“šâœ¨</p>
  <% } %>
</section>
