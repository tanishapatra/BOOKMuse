<li class="book-card">
  <!-- Top: Favorite + 3-dot Menu -->
  <div class="book-top-menu">
    <form action="/books/<%= book.id %>/favorite" method="POST" class="fav-form">
      <button type="submit" class="fav-btn">
        <%= book.is_favorite ? "â¤ï¸" : "ğŸ¤" %>
      </button>
    </form>

    <!-- Three-dot dropdown -->
    <div class="dropdown">
      <button class="three-dot-btn">â‹®</button>
      <div class="dropdown-menu">
        <a href="/books/edit/<%= book.id %>">âœï¸ Edit</a>
        <form action="/books/delete/<%= book.id %>" method="POST">
          <button type="submit" class="delete-btn">ğŸ—‘ Delete</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Cover Image -->
  <% if (book.cover_url) { %>
    <img src="<%= book.cover_url %>" alt="Book Cover" class="book-cover" />
  <% } %>

  <!-- Book Info -->
  <h2 class="book-card-title"><%= book.title %></h2>
  <p class="author">by <%= book.author %></p>

  <!-- Rating (stars) -->
  <div class="star-rating">
    <% for (let i = 1; i <= 5; i++) { %>
      <span class="<%= i <= book.rating ? 'star filled' : 'star' %>">â˜…</span>
    <% } %>
  </div>

  <!-- Status Tag -->
  <div class="status-tag"><%= book.status %></div>

  <!-- Optional Tag -->
  <% if (book.tags && book.tags.length > 0) { %>
    <div class="book-tags">
      <% book.tags.forEach(tag => { %>
        <span class="tag"><%= tag %></span>
      <% }) %>
    </div>
  <% } %>

  <!-- Read Date -->
  <% if (book.read_date) { %>
    <p class="read-date">Read on: <%= new Date(book.read_date).toLocaleDateString() %></p>
  <% } %>

  <!-- Notes Link -->
  <a href="/books/<%= book.id %>/notes" class="notes-link">ğŸ“ Notes</a>
</li>
